<h2>{{title}}</h2>

<h4>Email: {{user.email}}</h4>
<ul>
  {{#each user.feeds}}
    <li>{{title}}</li>
  {{/each}}
</ul>

<a class="edit-button" href="/{{user._id}}/edit">Edit User</a>
<form onsubmit="return confirm('Are you sure you want to delete this account?')" action="/{{user._id}}" method="post" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" class="delete-button" value="Delete User">
</form>
