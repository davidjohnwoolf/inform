<h2>{{feed.title}}</h2>

<div id="feed-options">

  <a class="new-button" href="/{{userId}}/feeds/{{feed._id}}/sources/new">Add Source</a>
  <a class="edit-button" href="/{{userId}}/feeds/{{feed._id}}/edit">Edit Feed</a>
  <form class="delete-form" onsubmit="return confirm('Are you sure you want to delete this feed?')" action="/{{userId}}/feeds/{{feed._id}}" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="delete-button" value="Delete Feed">
  </form>

</div>

<div id="display-source">

</div>

<script src="/js/feed-request.js"></script>
